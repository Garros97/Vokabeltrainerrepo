<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LevelSelection">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        android:text="Fachgebiet: "
        android:textColor="#103895"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="35dp"
        android:text="Elektrotechnik"
        android:textColor="#121315"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_newArea"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bg_round"
        android:text="Anderes Fachgebiet finden"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level3" />


    <ImageView
        android:id="@+id/unlock"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/locko"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lock"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/unlock2"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/locko"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lock2"
        app:layout_constraintTop_toBottomOf="@+id/unlock" />

    <ImageView
        android:id="@+id/unlock3"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/locko"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lock3"
        app:layout_constraintTop_toBottomOf="@+id/unlock2" />

    <ImageView
        android:id="@+id/lock"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/lockc"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/button_level1"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/lock2"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/lockc"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/button_level2"
        app:layout_constraintTop_toBottomOf="@+id/lock" />

    <ImageView
        android:id="@+id/lock3"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/lockc"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/button_level3"
        app:layout_constraintTop_toBottomOf="@+id/lock2" />

    <ImageView
        android:id="@+id/level1"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="116dp"
        android:src="@drawable/level1"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/level2"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/level2"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level1" />

    <ImageView
        android:id="@+id/level3"
        android:layout_width="56dp"
        android:layout_height="66dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/level3"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/level2" />

    <Button
        android:id="@+id/button_level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="25dp"
        android:text="level 1"
        app:layout_constraintBottom_toTopOf="@+id/button_level2"
        app:layout_constraintStart_toEndOf="@+id/level1"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.99" />

    <Button
        android:id="@+id/button_level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:text="Level 2"
        app:layout_constraintStart_toEndOf="@+id/level2"
        app:layout_constraintTop_toBottomOf="@+id/button_level1" />

    <Button
        android:id="@+id/button_level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:text="Level 3"
        app:layout_constraintStart_toEndOf="@+id/level3"
        app:layout_constraintTop_toBottomOf="@+id/button_level2" />

</androidx.constraintlayout.widget.ConstraintLayout>